<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Cake"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2D1B11"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:onClick="onClickHome"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Layers -->
        <TextView
            android:id="@+id/labelLayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Layers:"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/layersNum"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg_counter"
            app:layout_constraintTop_toTopOf="@+id/labelLayers"
            app:layout_constraintBottom_toBottomOf="@+id/labelLayers"
            app:layout_constraintStart_toEndOf="@+id/labelLayers" />

        <Button
            android:id="@+id/minusLayers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#795548"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelLayers"
            app:layout_constraintBottom_toBottomOf="@+id/labelLayers"
            app:layout_constraintStart_toEndOf="@+id/layersNum" />

        <Button
            android:id="@+id/plusLayers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#795548"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelLayers"
            app:layout_constraintBottom_toBottomOf="@+id/labelLayers"
            app:layout_constraintStart_toEndOf="@+id/minusLayers" />

        <!-- Fillings -->
        <TextView
            android:id="@+id/labelFillings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Fillings:"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/labelLayers"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Chocolate -->
        <TextView
            android:id="@+id/labelChoco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Chocolate:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/labelFillings"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chocoNum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="1"
            android:textSize="18sp"
            android:background="@drawable/bg_counter"
            app:layout_constraintTop_toTopOf="@+id/labelChoco"
            app:layout_constraintBottom_toBottomOf="@+id/labelChoco"
            app:layout_constraintStart_toEndOf="@+id/labelChoco" />

        <Button
            android:id="@+id/minusChoco"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:text="-"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#795548"
            app:layout_constraintTop_toTopOf="@+id/labelChoco"
            app:layout_constraintBottom_toBottomOf="@+id/labelChoco"
            app:layout_constraintStart_toEndOf="@+id/chocoNum" />

        <Button
            android:id="@+id/plusChoco"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:text="+"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#795548"
            app:layout_constraintTop_toTopOf="@+id/labelChoco"
            app:layout_constraintBottom_toBottomOf="@+id/labelChoco"
            app:layout_constraintStart_toEndOf="@+id/minusChoco" />

        <!-- Cherry -->
        <TextView
            android:id="@+id/labelCherry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cherry:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/labelChoco"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cherryNum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="0"
            android:textSize="18sp"
            android:background="@drawable/bg_counter"
            app:layout_constraintTop_toTopOf="@+id/labelCherry"
            app:layout_constraintBottom_toBottomOf="@+id/labelCherry"
            app:layout_constraintStart_toEndOf="@+id/labelCherry" />

        <Button
            android:id="@+id/minusCherry"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:text="-"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#795548"
            app:layout_constraintTop_toTopOf="@+id/labelCherry"
            app:layout_constraintBottom_toBottomOf="@+id/labelCherry"
            app:layout_constraintStart_toEndOf="@+id/cherryNum" />

        <Button
            android:id="@+id/plusCherry"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:text="+"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#795548"
            app:layout_constraintTop_toTopOf="@+id/labelCherry"
            app:layout_constraintBottom_toBottomOf="@+id/labelCherry"
            app:layout_constraintStart_toEndOf="@+id/minusCherry" />

        <!-- Drawing Area -->
        <TextView
            android:id="@+id/labelDrawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Draw Your Design"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/labelCherry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Круглый холст -->
        <com.example.bakery_v2.CircleDrawingView
            android:id="@+id/drawingView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/labelDrawing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <!-- Control Buttons -->
        <LinearLayout
            android:id="@+id/controlButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/drawingView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Clear"
                android:textStyle="bold"
                android:backgroundTint="@android:color/white"
                android:textColor="#E64A19"
                app:strokeColor="#E64A19"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnUndo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Undo"
                android:textStyle="bold"
                android:backgroundTint="@android:color/white"
                android:textColor="#E64A19"
                app:strokeColor="#E64A19"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <!-- Progress & Create -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/controlButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/createButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Create Cake"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#E64A19"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>