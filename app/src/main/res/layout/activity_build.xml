<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_623967124_31_phonot"
    tools:context=".Build">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#92FFBDBD"
        android:gravity="center"
        android:text="Создать торт"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Кнопка "Домой" -->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="81dp"
        android:layout_height="82dp"
        android:backgroundTint="#00AF2A2A"
        android:onClick="onClickHome"
        android:scaleType="centerCrop"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- Слои -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="134dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:background="#92FFBDBD"
        android:gravity="center"
        android:text="Слои:"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/layersNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/minusLayers"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#F65E5E"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="@+id/layersNum"
        app:layout_constraintStart_toEndOf="@+id/layersNum"
        app:layout_constraintTop_toTopOf="@+id/layersNum" />

    <Button
        android:id="@+id/plusLayers"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#F65E5E"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="@+id/layersNum"
        app:layout_constraintStart_toEndOf="@+id/minusLayers"
        app:layout_constraintTop_toTopOf="@+id/layersNum" />

    <!-- Начинки -->

    <!-- Шоколад -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#92FFBDBD"
        android:gravity="center"
        android:text="Начинки:"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layersNum" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#92FFBDBD"
        android:gravity="center"
        android:text="Шоколад"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/chocoNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/minusChoco"
        android:layout_width="61dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#F65E5E"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/chocoNum"
        app:layout_constraintEnd_toStartOf="@+id/chocoNum"
        app:layout_constraintTop_toTopOf="@+id/chocoNum" />

    <Button
        android:id="@+id/plusChoco"
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#F65E5E"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/chocoNum"
        app:layout_constraintStart_toEndOf="@+id/chocoNum"
        app:layout_constraintTop_toTopOf="@+id/chocoNum" />

    <!-- Вишня -->

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#92FFBDBD"
        android:gravity="center"
        android:text="Вишня"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/cherryNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/minusCherry"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#F65E5E"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/cherryNum"
        app:layout_constraintEnd_toStartOf="@+id/cherryNum"
        app:layout_constraintTop_toTopOf="@+id/cherryNum" />

    <Button
        android:id="@+id/plusCherry"
        android:layout_width="71dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#F65E5E"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/cherryNum"
        app:layout_constraintStart_toEndOf="@+id/cherryNum"
        app:layout_constraintTop_toTopOf="@+id/cherryNum" />

    <!-- Заголовок рисования -->

    <!-- DrawingView (основное поле) -->
    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#92FFBDBD"
        android:gravity="center"
        android:text="Нарисуйте узор"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chocoNum" />

    <com.example.bakery_v2.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="227dp"
        android:layout_height="212dp"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <!-- Кнопки управления -->
    <Button
        android:id="@+id/btnClear"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#F65E5E"
        android:text="Очистить"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/createButton"
        app:layout_constraintEnd_toStartOf="@+id/btnUndo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUndo"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FFA726"
        android:text="Отменить"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/createButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnClear" />

    <!-- Кнопка "Создать" -->
    <Button
        android:id="@+id/createButton"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#27AE60"
        android:text="✅ Создать торт"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>