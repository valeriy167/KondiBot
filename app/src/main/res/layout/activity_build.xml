<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F0E5"
        android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Cake"
        android:textColor="#3E2723"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="Home"
        android:onClick="onClickHome"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:tint="#3E2723" />

    <!-- Layers -->
    <TextView
        android:id="@+id/labelLayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Layers:"
        android:textColor="#5D4037"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/layersNum"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_counter"
        android:gravity="center"
        android:text="2"
        android:textColor="#3E2723"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/labelLayers"
        app:layout_constraintStart_toEndOf="@+id/labelLayers"
        app:layout_constraintTop_toTopOf="@+id/labelLayers" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/minusLayers"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:backgroundTint="#6D4C41"
            android:gravity="center"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/labelLayers"
            app:layout_constraintStart_toEndOf="@+id/layersNum"
            app:layout_constraintTop_toTopOf="@+id/labelLayers" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plusLayers"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#6D4C41"
            android:gravity="center"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/labelLayers"
            app:layout_constraintStart_toEndOf="@+id/minusLayers"
            app:layout_constraintTop_toTopOf="@+id/labelLayers" />

    <!-- Fillings -->
    <TextView
        android:id="@+id/labelFillings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Fillings:"
        android:textColor="#5D4037"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelLayers" />

    <!-- Chocolate -->
    <TextView
        android:id="@+id/labelChoco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Chocolate:"
        android:textColor="#5D4037"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelFillings" />

    <TextView
        android:id="@+id/chocoNum"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_counter"
        android:gravity="center"
        android:text="1"
        android:textColor="#3E2723"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/labelChoco"
        app:layout_constraintStart_toStartOf="@+id/layersNum"
        app:layout_constraintTop_toTopOf="@+id/labelChoco" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minusChoco"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#6D4C41"
        android:text="-"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelChoco"
        app:layout_constraintStart_toStartOf="@+id/minusLayers"
        app:layout_constraintTop_toTopOf="@+id/labelChoco" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plusChoco"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#6D4C41"
        android:text="+"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelChoco"
        app:layout_constraintStart_toStartOf="@+id/plusLayers"
        app:layout_constraintTop_toTopOf="@+id/labelChoco" />

    <!-- Cherry -->
    <TextView
        android:id="@+id/labelCherry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cherry:"
        android:textColor="#5D4037"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelChoco" />

    <TextView
        android:id="@+id/cherryNum"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_counter"
        android:gravity="center"
        android:text="0"
        android:textColor="#3E2723"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/labelCherry"
        app:layout_constraintStart_toStartOf="@+id/layersNum"
        app:layout_constraintTop_toTopOf="@+id/labelCherry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minusCherry"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#6D4C41"
        android:text="-"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelCherry"
        app:layout_constraintStart_toStartOf="@+id/minusChoco"
        app:layout_constraintTop_toTopOf="@+id/labelCherry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plusCherry"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#6D4C41"
        android:text="+"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelCherry"
        app:layout_constraintStart_toStartOf="@+id/plusChoco"
        app:layout_constraintTop_toTopOf="@+id/labelCherry" />

    <!-- Drawing Area -->
    <TextView
        android:id="@+id/labelDrawing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Draw Your Design"
        android:textColor="#3E2723"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelCherry" />

    <!-- Круглый холст (без изменений) -->
    <com.example.bakery_v2.CircleDrawingView
        android:id="@+id/drawingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelDrawing"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawingView">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="Clear"
            android:textColor="#E64A19"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="#E64A19"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUndo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="Undo"
            android:textColor="#E64A19"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="#E64A19"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <!-- Progress & Create -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controlButtons" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E64A19"
        android:text="Create Cake"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>